# ------------------------------------------------------------------------------
# Usage:
# 1. place AndroidNdkGdb.cmake somewhere inside $***REMOVED***CMAKE_MODULE_PATH***REMOVED***
# 2. inside your project add
#
#    include(AndroidNdkGdb)
#    android_ndk_gdb_enable()
#    # for each target
#    add_library(MyLibrary ...)
#    android_ndk_gdb_debuggable(MyLibrary)    


# add gdbserver and general gdb configuration to project
# also create a mininal NDK skeleton so ndk-gdb finds the paths
#
# the optional parameter defines the path to the android project.
# uses PROJECT_SOURCE_DIR by default.
macro(android_ndk_gdb_enable)
    if(ANDROID)
        # create custom target that depends on the real target so it gets executed afterwards
        add_custom_target(NDK_GDB ALL)
        
        if($***REMOVED***ARGC***REMOVED***)
            set(ANDROID_PROJECT_DIR $***REMOVED***ARGV0***REMOVED***)
        else()
            set(ANDROID_PROJECT_DIR $***REMOVED***PROJECT_SOURCE_DIR***REMOVED***)
        endif()

        set(NDK_GDB_SOLIB_PATH $***REMOVED***ANDROID_PROJECT_DIR***REMOVED***/obj/local/$***REMOVED***ANDROID_NDK_ABI_NAME***REMOVED***/)
        file(MAKE_DIRECTORY $***REMOVED***NDK_GDB_SOLIB_PATH***REMOVED***)
        
        # 1. generate essential Android Makefiles
        file(MAKE_DIRECTORY $***REMOVED***ANDROID_PROJECT_DIR***REMOVED***/jni)
        if(NOT EXISTS $***REMOVED***ANDROID_PROJECT_DIR***REMOVED***/jni/Android.mk)
            file(WRITE $***REMOVED***ANDROID_PROJECT_DIR***REMOVED***/jni/Android.mk "APP_ABI := $***REMOVED***ANDROID_NDK_ABI_NAME***REMOVED***\n")
        endif()
        if(NOT EXISTS $***REMOVED***ANDROID_PROJECT_DIR***REMOVED***/jni/Application.mk)
            file(WRITE $***REMOVED***ANDROID_PROJECT_DIR***REMOVED***/jni/Application.mk "APP_ABI := $***REMOVED***ANDROID_NDK_ABI_NAME***REMOVED***\n")
        endif()
    
        # 2. generate gdb.setup
        get_directory_property(PROJECT_INCLUDES DIRECTORY $***REMOVED***PROJECT_SOURCE_DIR***REMOVED*** INCLUDE_DIRECTORIES)
        string(REGEX REPLACE ";" " " PROJECT_INCLUDES "$***REMOVED***PROJECT_INCLUDES***REMOVED***")
        file(WRITE $***REMOVED***LIBRARY_OUTPUT_PATH***REMOVED***/gdb.setup "set solib-search-path $***REMOVED***NDK_GDB_SOLIB_PATH***REMOVED***\n")
        file(APPEND $***REMOVED***LIBRARY_OUTPUT_PATH***REMOVED***/gdb.setup "directory $***REMOVED***PROJECT_INCLUDES***REMOVED***\n")
    
        # 3. copy gdbserver executable
        file(COPY $***REMOVED***ANDROID_NDK***REMOVED***/prebuilt/android-$***REMOVED***ANDROID_ARCH_NAME***REMOVED***/gdbserver/gdbserver DESTINATION $***REMOVED***LIBRARY_OUTPUT_PATH***REMOVED***)
    endif()
endmacro()

# register a target for remote debugging
# copies the debug version to NDK_GDB_SOLIB_PATH then strips symbols of original
macro(android_ndk_gdb_debuggable TARGET_NAME)
    if(ANDROID)
        get_property(TARGET_LOCATION TARGET $***REMOVED***TARGET_NAME***REMOVED*** PROPERTY LOCATION)
        
        # create custom target that depends on the real target so it gets executed afterwards
        add_dependencies(NDK_GDB $***REMOVED***TARGET_NAME***REMOVED***)
    
        # 4. copy lib to obj
        add_custom_command(TARGET NDK_GDB POST_BUILD COMMAND $***REMOVED***CMAKE_COMMAND***REMOVED*** -E copy_if_different $***REMOVED***TARGET_LOCATION***REMOVED*** $***REMOVED***NDK_GDB_SOLIB_PATH***REMOVED***)
    
        # 5. strip symbols
        add_custom_command(TARGET NDK_GDB POST_BUILD COMMAND $***REMOVED***CMAKE_STRIP***REMOVED*** $***REMOVED***TARGET_LOCATION***REMOVED***)
    endif()
endmacro()
