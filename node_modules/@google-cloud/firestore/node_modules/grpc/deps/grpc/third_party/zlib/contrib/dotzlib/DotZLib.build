<?xml version="1.0" encoding="utf-8" ?>
<project name="DotZLib" default="build" basedir="./DotZLib">
	<description>A .Net wrapper library around ZLib1.dll</description>

	<property name="nunit.location" value="c:/program files/NUnit V2.1/bin" />
	<property name="build.root" value="bin" />

	<property name="debug" value="true" />
	<property name="nunit" value="true" />

	<property name="build.folder" value="$***REMOVED***build.root***REMOVED***/debug/" if="$***REMOVED***debug***REMOVED***" />
	<property name="build.folder" value="$***REMOVED***build.root***REMOVED***/release/" unless="$***REMOVED***debug***REMOVED***" />

	<target name="clean" description="Remove all generated files">
		<delete dir="$***REMOVED***build.root***REMOVED***" failonerror="false" />
	</target>

	<target name="build" description="compiles the source code">

		<mkdir dir="$***REMOVED***build.folder***REMOVED***" />
		<csc target="library" output="$***REMOVED***build.folder***REMOVED***DotZLib.dll" debug="$***REMOVED***debug***REMOVED***">
			<references basedir="$***REMOVED***nunit.location***REMOVED***">
				<includes if="$***REMOVED***nunit***REMOVED***" name="nunit.framework.dll" />
			</references>
			<sources>
				<includes name="*.cs" />
				<excludes name="UnitTests.cs" unless="$***REMOVED***nunit***REMOVED***" />
			</sources>
			<arg value="/d:nunit" if="$***REMOVED***nunit***REMOVED***" />
		</csc>
	</target>

</project>